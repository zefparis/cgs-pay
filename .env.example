# Server
PORT=8080
NODE_ENV=development

# Database
DATABASE_URL=postgresql://congo_user:password@localhost:5432/congo_payout?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Security
CG_INTERNAL_SECRET=dev-secret-change-in-production

# Provider Selection
PROVIDER=THUNES

# Thunes Provider
THUNES_BASE_URL=https://sandbox.thunes.com/api
THUNES_KEY=thunes-sandbox-key
THUNES_SECRET=thunes-sandbox-secret

# Rapyd Provider
RAPYD_BASE_URL=https://sandboxapi.rapyd.net
RAPYD_KEY=rapyd-sandbox-key
RAPYD_SECRET=rapyd-sandbox-secret

# Default Financial Parameters
DEFAULT_TAXES_PCT=20
DEFAULT_MARKETING_PCT=20
DEFAULT_INVESTOR_SHARE_PCT=25
DEFAULT_PAYOUT_FEES_PCT=1.2
DEFAULT_FX_PCT=0
DEFAULT_MARKET_MULTIPLIER=30

# Feature Flags
DRY_RUN_MODE=false
AUTO_CLOSE_DAY=false
