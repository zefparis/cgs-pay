# Production Environment Variables for Railway
NODE_ENV=production
PORT=8080

# Database & Redis - Railway provides these automatically
# DATABASE_URL will be set by Railway PostgreSQL service
# REDIS_URL will be set by Railway Redis service

# Security - CHANGE THESE IN PRODUCTION!
CG_INTERNAL_SECRET=CHANGE-THIS-TO-STRONG-SECRET-IN-PRODUCTION

# Payment Providers - REAL CREDENTIALS NEEDED
PROVIDER=THUNES

# Thunes Production
THUNES_BASE_URL=https://api.thunes.com
THUNES_KEY=YOUR-REAL-THUNES-API-KEY
THUNES_SECRET=YOUR-REAL-THUNES-SECRET

# Rapyd Production (backup)
RAPYD_BASE_URL=https://api.rapyd.net
RAPYD_KEY=YOUR-REAL-RAPYD-KEY
RAPYD_SECRET=YOUR-REAL-RAPYD-SECRET

# Financial Parameters
DEFAULT_TAXES_PCT=20
DEFAULT_MARKETING_PCT=20
DEFAULT_INVESTOR_SHARE_PCT=25
DEFAULT_PAYOUT_FEES_PCT=1.2
DEFAULT_FX_PCT=0
DEFAULT_MARKET_MULTIPLIER=30

# Production Mode - REAL PAYOUTS!
DRY_RUN_MODE=false
AUTO_CLOSE_DAY=false

# Logging
LOG_LEVEL=info
